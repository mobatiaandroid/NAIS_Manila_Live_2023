<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <com.mobatia.nasmanila.manager.CustomFontSansProTextBlackSemiBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:text=" 10:00 "
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="18dp"/>
            <com.mobatia.nasmanila.manager.CustomFontSansProTextWhite
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/timeamorpm"
                android:text="Am"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="18dp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center"        >
        <com.mobatia.nasmanila.manager.CustomFontSansProTextBlack
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/routename"
            android:text="Al shifa Tower"
            android:gravity="left"
            android:layout_gravity="center"
            android:textSize="18dp"/>
        <com.mobatia.nasmanila.manager.CustomFontSansProTextWhiteWithoutColor
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/destination"
            android:text="Start"
            android:textColor="@color/grey"
            android:gravity="left"
            android:layout_gravity="left|center"
            android:textSize="15dp"
            />
    </LinearLayout>

    </LinearLayout>


