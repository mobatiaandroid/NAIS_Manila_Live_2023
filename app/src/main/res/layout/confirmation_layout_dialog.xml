<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
   >

    <!--android:background="#16A356"-->
    <!--android:background="#3F9FC0"-->

    <RelativeLayout
        android:id="@+id/headerConatiner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <TextView
            android:id="@+id/txt_titlename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/view_separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/headerConatiner"
        android:layout_marginBottom="2dp"
        />

    <RelativeLayout
        android:id="@+id/relText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_separator"
        android:layout_centerInParent="true"
        android:layout_margin="5dp">

<TextView
            android:id="@+id/tvErrorMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:maxLines="5"
            android:minLines="2"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/relText"
        android:background="#223F7B"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:text="OK"
        android:textSize="16sp"
         />


    <!--android:background="@drawable/submitbtn"-->


</RelativeLayout>